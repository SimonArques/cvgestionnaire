{% extends "::layout.html.twig" %}

{% block content %}

    <!-- Page Content -->
    <div id="page-content-wrapper">

        <form class="form-horizontal">
            <fieldset>

                <!-- Experiences -->
                <legend>Expériences</legend>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="selectbasic">Domaine</label>
                    <div class="col-md-4">
                        <select id="selectbasic" name="selectbasic" class="form-control">
                            <option value="1">Informatique</option>
                            <option value="2">Commerce</option>
                        </select>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textinput">Intitulé du poste</label>  
                    <div class="col-md-4">
                        <input id="textinput" name="textinput" placeholder="placeholder" class="form-control input-md" type="text"> 
                    </div>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="textarea">Tâches réalisées</label>
                    <div class="col-md-4">                     
                        <textarea class="form-control" id="textarea" name="textarea">default text</textarea>
                    </div>
                </div>

            </fieldset>
        </form>

    {% endblock %}